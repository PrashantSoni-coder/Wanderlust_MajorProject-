<% layout ("/layouts/boilerplate") %>

<div class="row mt-3">
    <h2 class="col-6 offset-3">SignUp on WanderLust</h2>
    <div class="col-6 offset-3" >
        <form action="/signup" method="POST" class="needs-validation" novalidate>
        <div class="mb-3">
            <lable for="username" class="form-lable">Username</lable>
            <input name="username" id="username" required type="text" class="form-control" >
            <div class="invalid-feedback">
            Please Enter a valid Username.
            </div>
            <lable for="email" class="form-lable">Email</lable>
            <input name="email" id="email" required type="email" class="form-control" >
            <div class="invalid-feedback">
            Please Enter a valid Email.
            </div>
            <lable for="password" class="form-lable">Password</lable>
            <input name="password" id="password" required type="password" class="form-control" >
            <div class="invalid-feedback">
            Please Enter a valid Password.
            </div>
        </div>
        <button class="btn btn-success">SignUp</button>
        </form>

    </div>
</div>