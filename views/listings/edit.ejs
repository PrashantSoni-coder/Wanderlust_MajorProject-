<% layout("layouts/boilerplate") %>
<div class="row">
    <div class="col-8  offset-2">
    <h2>Edit Listing</h2>
    
    <form method="POSt" action="/listings/<%= listing._id %>?_method=PUT">
        <div class="mb-3">
            <lable for="title" class="form-lable">Title</lable>
            <input name="listing[title]" value="<%= listing.title%>" type="text" class="form-control" >
        </div>
         <div class="mb-3">
            <lable for="description" class="form-lable">Description</lable>
            <textarea name="listing[description]" rows="6" cols="30" class="form-control" type="text" >
                <%= listing.description %>
            </textarea>
        </div>
        <div class="mb-3">
            <lable for="image" value="<%= listing.image%>" class="form-lable">Image</lable>
            <input name="listing[image]" placeholder="Enter image URl/LINK" type="text" class="form-control">
        </div>
        <div class="row">
            <div class="mb-3 col-md-4">
            <lable for="price" value="<%= listing.price%>" class="form-lable">Price</lable>
            <input name="listing[price]" placeholder="1200" type="number" class="form-control">
            </div>
            <div class="mb-3 col-md-8">
                <lable for="country" value="<%= listing.country%>" class="form-lable">Country</lable>
                <input name="listing[country]" placeholder="India" type="text" class="form-control">
            </div>
        </div>
        <div class="mb-3">
            <lable for="location" value="<%= listing.location%>" class="form-lable">Location</lable>
            <input name="listing[location]" placeholder="New Delhi" type="text" class="form-control">
        </div>
        <br><br>
        <button class="btn btn-dark mb-3 add-btn">Save</button>

    </form>
    
</div></div>
