<% layout("layouts/boilerplate") %>
<div class="row">
    <div class="col-8  offset-2">
    <h2>Edit Listing</h2>
    
    <form method="POSt" class="needs-validation" novalidate action="/listings/<%= listing._id %>?_method=PUT">
        <div class="mb-3">
            <lable for="title" class="form-lable">Title</lable>
            <input name="listing[title]" value="<%= listing.title%>" type="text" class="form-control" required>
            <div class="invalid-feedback">
            Please Enter a valid Title.
            </div>
        </div>
         <div class="mb-3">
            <lable for="description" class="form-lable">Description</lable>
            <textarea name="listing[description]" rows="6" cols="30" class="form-control" type="text" required>
                <%= listing.description %>
            </textarea>
             <div class="invalid-feedback">
            Please write a short description.
            </div>
        </div>
        <div class="mb-3">
            <lable for="image" value="<%= listing.image%>" class="form-lable">Image</lable>
            <input name="listing[image]" value="<%= listing.image%>" type="text" class="form-control" required>
             <div class="invalid-feedback">
            Please enter a Valid image url/link.
            </div>
        </div>
        <div class="row">
            <div class="mb-3 col-md-4">
            <lable for="price" value="<%= listing.price%>" class="form-lable">Price</lable>
            <input name="listing[price]" value="<%= listing.price%>"  class="form-control" required>
             <div class="invalid-feedback">
            Please enter a Valid Price Value.
            </div>
            </div>
            <div class="mb-3 col-md-8">
                <lable for="country" value="<%= listing.country%>" class="form-lable">Country</lable>
                <input name="listing[country]" value="<%= listing.country%>" type="text" class="form-control" required>
                <div class="invalid-feedback">
            Please enter a valid country.
            </div>
            </div>
        </div>
        <div class="mb-3">
            <lable for="location" value="<%= listing.location%>" class="form-lable">Location</lable>
            <input name="listing[location]" value="<%= listing.location%>" type="text" class="form-control" required>
            <div class="invalid-feedback">
            Please enter a valid Location.
            </div>
        </div>
        <br><br>
        <button class="btn btn-dark mb-3 add-btn">Save</button>

    </form>
    
</div></div>
